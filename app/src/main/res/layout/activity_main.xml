<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.iecs.fcu.mitsign.MainActivity">

    <ImageView
        android:id="@+id/image_mit"
        android:layout_width="202dp"
        android:layout_height="351dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/mit_sign_unbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="送出查詢"
        android:textSize="8pt"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_serial_B" />

    <TextView
        android:id="@+id/tv_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:text="MIT標章查詢"
        android:textColor="#000000"
        android:textSize="12pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_serial_A"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="輸入第一欄標章編號 (8位)"
        android:inputType="number"
        android:singleLine="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_lable"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_serial_B"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="輸入第二欄標章編號 (5位)"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@+id/et_serial_A"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
